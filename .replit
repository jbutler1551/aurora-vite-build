run = "npm run start"
entrypoint = "server/index.js"
modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[env]
NODE_ENV = "production"
PORT = "3001"

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[deployment]
run = ["sh", "-c", "npm run start"]
build = ["sh", "-c", "npm install && npm run build && npm run db:generate"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
